<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerifyPhone"
    android:background="@drawable/loginbackground"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:fontFamily="@font/lato_regular"
        android:text="Hello Gamer!"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Resend OTP"
        android:textColor="#121CD5"
        android:textSize="16dp"
        android:id="@+id/resendotp"
        app:layout_constraintEnd_toStartOf="@+id/verifyotp"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp" />

    <EditText
        android:id="@+id/otp"

        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:background="@drawable/input"
        android:backgroundTint="@color/colorwhite"
        android:hint="Enter OTP"
        android:inputType="number"
        android:padding="15sp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#3e3e3e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/verifyotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="end|right"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/newaccent"
        android:elevation="5sp"
        android:fontFamily="@font/lato_regular"
        app:borderWidth="0dp"

        app:elevation="10dp"

        app:fabCustomSize="60dp"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="@+id/otp"
        app:layout_constraintTop_toBottomOf="@+id/otp"
        app:srcCompat="@drawable/right_arrow"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>